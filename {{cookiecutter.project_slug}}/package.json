{
  "name": "{{cookiecutter.project_slug}}",
  "version": "0.1.0",
  "description": "Proyecto NestJS + XState + Drizzle generado con Cookiecutter",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "test": "jest",
    "test:cov": "jest --coverage",
    "lint": "biome check --write .",
    "lint:check": "biome check .",
    "format": "biome format --write .",
    "format:check": "biome format ."
  },
  "dependencies": {
    "@nestjs/common": "^{{cookiecutter.nestjs_version|default('11.0.0')}}",
    "@nestjs/core": "^{{cookiecutter.nestjs_version|default('11.0.0')}}",
    "@nestjs/platform-express": "^{{cookiecutter.nestjs_version|default('11.0.0')}}",
    {% if cookiecutter.use_database == "y" %}
    "drizzle-orm": "^0.44.4",
    "pg": "^8.11.3",
    {% endif %}
    "xstate": "^5.20.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^{{cookiecutter.nestjs_version|default('11.0.0')}}",
    "@nestjs/testing": "^{{cookiecutter.nestjs_version|default('11.0.0')}}",
    "@types/jest": "^29.5.3",
    "@biomejs/biome": "^2.1.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
